// Coding Exercise 5 Implementing a Precise Leap Year Calculator
// to enhance Conditional reasoning
public class LeapYear {
    // write code here
    public static boolean isLeapYear(int year)
    {
        if(year < 1 || year > 9999)
        {
            return false;
        }
        
        if(year % 4 == 0)
        {
            if(year % 100 != 0)
            {
                return true;
            } 
            else 
            {
                if(year % 400 == 0)
                {
                    return true;
                } 
                else 
                {
                    return false;
                }
            }
        } 
        else 
        {
            return false;
        }
    } 
}
